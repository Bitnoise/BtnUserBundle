<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">

      {{ form_errors(form.new) }}
      <label>New password</label>
      <div class="field">
        {{ form_widget(form.new.first, { 'attr' : attr|default({}) }) }}
      </div>

      <label>Repeat password</label>
      <div class="field">
        {{ form_widget(form.new.second, { 'attr' : attr|default({}) }) }}
      </div>

      {{ form_rest(form)}}
    <div>
        <input type="submit" class="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
